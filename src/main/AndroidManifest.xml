<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myapp.esps.uam.es.robpizarro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RoundListActivity"/>
        <activity android:name=".activities.MainActivity"
            android:parentActivityName=".activities.RoundListActivity"/>
        <activity android:name=".activities.PreferenceActivity"
            android:parentActivityName=".activities.RoundListActivity" />
        <activity android:name=".activities.ScoresActivity"
            android:parentActivityName=".activities.RoundListActivity"/>
    </application>

</manifest>
